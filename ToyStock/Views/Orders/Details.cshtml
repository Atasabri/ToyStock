<table class="table">
    <tr>
        <th>
            Product Code
        </th>
        <th>
Product Name
                </th>
        <th>
           Product Price
        </th>
        <th>
            Count
        </th>
        <th>
            Color
        </th>
        <th>
            Size
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Order_Products)
    {
        <tr>
            <td>
                @item.Product.Code
            </td>
            <td>
               @item.Product.Name
            </td>
            <td>
                @item.Product.Price
            </td>
            <td>
                @item.Count
            </td>
            <td>
                @item.Color
            </td>
            <td>
                @item.Size
            </td>
            <td>
                @Html.ActionLink("Details", "Details","Products", new { id = item.Product_ID },null) 
            </td>
        </tr>
    }

</table>
